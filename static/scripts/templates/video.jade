if isMobile
  div(style="background-image: url(/video/#{filename}.jpg)" alt="#{alt}")
else
  video(autoplay onended='this.currentTime=#{loopstart};' alt="#{alt}")
    source(src="/video/#{filename}.ogv" type='video/ogg; codecs="theora, vorbis"')
    source(src="/video/#{filename}.webm" type="video/webm")
    source(src="/video/#{filename}.mp4" type="video/mp4")
