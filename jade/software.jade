extend index.extend

block head-title
  title Cole Lawrence: Software
  meta(name="description" content="Interactive software for web browsers and desktop made by Cole Lawrence (ZombieHippie)")
  meta(name="keywords" content="Cole Lawrence,programming,software,web development,ZombieHippie,AZombieHippie,Cole R Lawrence")

//-projects = require("projects.cson")
block body
  center: h2 Software Projects
  ul.project-list
    - var typeTest = /software/
    each project in projects
      if typeTest.exec(project.type) != null
        +projectTile(project.name, project.slug, project.img, project.desc)